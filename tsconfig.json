{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "dist",
        "typeRoots": [
			"node_modules/@types"
		],
        "lib": ["es6", "dom"],
		"module": "commonjs"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}