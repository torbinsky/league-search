{
    "compilerOptions": {
        "moduleResolution": "node",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "dist",
        "typeRoots": [
			"node_modules/@types"
		],
        "lib": ["es6", "dom"],
		"module": "commonjs",
		"target": "es6"
    },
    "files": [
        "src/main.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}