{
    "compilerOptions": {
        "target": "ES6",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es6"],
        "module": "commonjs",
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}